<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <groupId>org.mortbay.ijetty</groupId>
   <modelVersion>4.0.0</modelVersion>
   <artifactId>contacts-debug</artifactId>
   <version>2.1-SNAPSHOT</version>
   <packaging>apk</packaging>
   <name>I-Jetty :: Contacts Debug</name>
   <description>Debug Contacts ContentProviders on Android</description>
   <build>
      <directory>bin</directory>
      <sourceDirectory>src</sourceDirectory>
      <outputDirectory>bin/classes</outputDirectory>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
            </configuration>
         </plugin>
         <plugin>
           <groupId>com.googlecode.mvndroid</groupId>
           <artifactId>mvndroid</artifactId>
           <version>0.9.0</version>
           <configuration>
             <resDir>res</resDir>
             <genreateUnsignedPackage>false</genreateUnsignedPackage>
           </configuration>
           <extensions>true</extensions>
         </plugin>
      </plugins>
   </build>
   <dependencies>
      <dependency>
        <groupId>com.googlecode.mvndroid</groupId>
        <artifactId>mvndroid</artifactId>
        <version>0.9.0</version>
      </dependency>
      <dependency>
        <groupId>com.google.android</groupId>
        <artifactId>android.sdk</artifactId>
        <version>4</version>
        <scope>system</scope>
        <systemPath>${env.ANDROID_SDK}${file.separator}/android.jar</systemPath>
      </dependency>
   </dependencies>
   <pluginRepositories>
     <pluginRepository>
       <id>mvndroid-repo</id>
       <name>Mvndroid Maven2 Repository</name>
       <url>http://mvndroid.googlecode.com/svn/maven/2</url>
     </pluginRepository>
   </pluginRepositories>
</project>
