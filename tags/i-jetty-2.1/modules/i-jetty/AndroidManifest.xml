<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mortbay.ijetty"
    android:versionCode="3"
    android:versionName="2.1">
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    <application android:label="@string/app_name" android:icon="@drawable/jetty">
        <activity android:name=".IJetty"
                  android:label="@string/app_name"
                  android:icon="@drawable/jetty"
                  android:multiprocess="false"
                  android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".IJettyEditor"
                  android:label="@string/edit_preferences">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".IJettyDownloader"
                  android:label="@string/jetty_downloader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <service android:name=".IJettyService" android:process=":remote"/>
    </application>
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.INTERNET" /> 
    <uses-permission android:name="android.permission.WAKE_LOCK" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
</manifest> 
